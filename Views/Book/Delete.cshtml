@model LMS_WEB_PORTAL.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Are you sure you want to delete this book?</h2>

<div>
    <h4>Book Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @(Model.IsIssued ? "Issued" : "Available")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?');">
            Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
